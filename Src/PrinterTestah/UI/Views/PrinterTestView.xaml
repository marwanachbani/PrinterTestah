<UserControl x:Class="UI.Views.PrinterTestView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:viewmodels="clr-namespace:UI.ViewModels" xmlns:d="http://schemas.microsoft.com/expression/blend/2008"  Width="278" Height="294">

    <StackPanel Margin="20">
        <TextBlock Text="{Binding CurrentPrinter.Name}"
                   FontSize="18"
                   Margin="0,0,0,10"/>

        <Button Content="Run Test"
                Command="{Binding RunTestCommand}"
                Height="35"/>

        <Button Content="Print Test Page"
                Command="{Binding PrintCommand}"
                Height="35"
                Margin="0,5,0,0"/>

        <TextBlock Text="{Binding TestResult}"
                   FontSize="16"
                   FontWeight="Bold"
                   Margin="0,10,0,0"/>

        <Button Content="Back"
                Command="{Binding BackCommand}"
                Height="30"
                Margin="0,20,0,0"/>
    </StackPanel>
</UserControl>
