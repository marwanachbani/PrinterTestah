<UserControl x:Class="UI.Views.PrinterListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Width="534">

    <StackPanel Margin="20">
        <TextBlock Text="Available Printers" FontSize="20" Margin="0,0,0,10"/>

        <DataGrid ItemsSource="{Binding Printers}"
                  SelectedItem="{Binding SelectedPrinter , Mode=TwoWay}"
                  
                  AutoGenerateColumns="False"
                  Height="300">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" />
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" />
                <DataGridCheckBoxColumn Header="Default" Binding="{Binding IsDefault}" />
            </DataGrid.Columns>
        </DataGrid>

        <Button Content="Test Selected Printer"
                Command="{Binding GoToTestCommand}" 
                Margin="0,10,0,0"
                Height="35"/>
    </StackPanel>
</UserControl>
